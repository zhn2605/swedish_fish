{
    "version": "0.2.0",
    "configurations":[
        {
            "name": "Debug",
            "type": "ccpdbg",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "args": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-debug",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}